<views:MvxWindow  x:Class="Peernet.Browser.WPF.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  xmlns:contexts="clr-namespace:Peernet.Browser.Application.Contexts;assembly=Peernet.Browser.Application"
                  xmlns:controls="clr-namespace:Peernet.Browser.WPF.Controls"
                  WindowStyle="None"
                  Background="Transparent"
        AllowsTransparency="True"
        Height="900" Width="1441"
        WindowStartupLocation="CenterScreen">
    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="6" GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>
    <views:MvxWindow.ContentTemplate>
        <DataTemplate>
            <Border BorderThickness="0" BorderBrush="Transparent" CornerRadius="8">
                <Border.Background>
                    <SolidColorBrush Color="{StaticResource MainBackground}" />
                </Border.Background>
                <Border BorderThickness="0" BorderBrush="Transparent" CornerRadius="8">
                    <Border.Style>
                        <Style TargetType="{x:Type Border}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=(contexts:GlobalContext.IsMainWindowActive)}" Value="False">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="#000000" Opacity="0.3" />
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=(contexts:GlobalContext.IsMainWindowActive)}" Value="True">
                                    <Setter Property="Background" Value="Transparent" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <controls:ButtonsControl Panel.ZIndex="2" Grid.Row="0" InitializeOnLoad="true" />
                        <controls:NavigationBarControl Panel.ZIndex="2" Grid.Row="1" InitializeOnLoad="true" />
                        <ContentPresenter Grid.Row="1" Content="{Binding}" Panel.ZIndex="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                        <controls:FooterControl Panel.ZIndex="2" Grid.Row="1" InitializeOnLoad="true" DockPanel.Dock="Bottom" />
                    </Grid>
                </Border>
            </Border>
        </DataTemplate>
    </views:MvxWindow.ContentTemplate>
</views:MvxWindow>