<views:MvxWindow  x:Class="Peernet.Browser.WPF.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  xmlns:contexts="clr-namespace:Peernet.Browser.Application.Contexts;assembly=Peernet.Browser.Application"
                  xmlns:controls="clr-namespace:Peernet.Browser.WPF.Controls"
                  WindowStyle="None"
                  Background="Transparent"
        AllowsTransparency="True"
        Height="900" Width="1441"
        WindowStartupLocation="CenterScreen">
    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="1" GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>
    <views:MvxWindow.ContentTemplate>
        <DataTemplate>
            <Border BorderThickness="0" BorderBrush="Transparent" CornerRadius="8">
                <Border.Background>
                    <SolidColorBrush Color="{StaticResource MainBackground}" />
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Panel.ZIndex="2" Grid.RowSpan="2" BorderThickness="0" BorderBrush="Transparent" CornerRadius="8">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#000000" Opacity="0.3" />
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=(contexts:GlobalContext.IsMainWindowActive)}" Value="True">
                                        <Setter Property="Visibility" Value="Hidden" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <ContentControl Content="{Binding Path=(contexts:GlobalContext.Modal)}" />
                    </Border>

                    <Image Visibility="{Binding Path=(contexts:GlobalContext.IsLogoVisible), Converter={StaticResource BoolToVisibility}}"  Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70 0" Source="{StaticResource LogoAbbreviationDrawingImage}" Height="50" />
                    <controls:ButtonsControl Grid.Row="0" InitializeOnLoad="true" />
                    <controls:NavigationBarControl Panel.ZIndex="1" Margin="0 12 0 0" HorizontalAlignment="Right" Grid.Row="1" InitializeOnLoad="true" />
                    <ContentPresenter Grid.Row="1" Content="{Binding}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                    <controls:FooterControl Grid.Row="2" InitializeOnLoad="true" DockPanel.Dock="Bottom" />
                    <ItemsControl ItemsSource="{Binding Path=(contexts:GlobalContext.Notifications)}" VerticalAlignment="Bottom" Margin="0, 0, 0, 122"  Panel.ZIndex="2" Grid.RowSpan="2">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <controls:NotificationControl Notification="{Binding Text}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </DataTemplate>
    </views:MvxWindow.ContentTemplate>
</views:MvxWindow>