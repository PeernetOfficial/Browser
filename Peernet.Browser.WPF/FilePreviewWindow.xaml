<views:MvxWindow  x:Class="Peernet.Browser.WPF.FilePreviewWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  Height="390" Width="720"
                  WindowStartupLocation="Manual"
                  Top="100"
                  Left="100"
                  x:Name="PreviewWindow"
                  Topmost="True"
                  Background="{DynamicResource PreviewBackground}">
    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="5" GlassFrameThickness="0" CaptionHeight="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>
    <views:MvxWindow.ContentTemplate>
        <DataTemplate>
            <Border BorderThickness="1">
                <Border.BorderBrush>
                    <SolidColorBrush Opacity="0.2" Color="Black" />
                </Border.BorderBrush>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource MinimizeButtonStyle}" Click="Minimize_OnClick" />
                        <Button Style="{StaticResource MaximizeButtonStyle}" Click="Maximize_OnClick" />
                        <Button Style="{StaticResource CloseButtonStyle}" Click="Close_OnClick" />
                    </StackPanel>
                    <StackPanel Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="80, 10, 0, 0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Information" Style="{StaticResource Active}" FontSize="32" FontWeight="Medium" />
                            <Image Source="{StaticResource ShareDrawingImage}" Margin="380, 0, 0, 0">
                                <Image.Style>
                                    <Style TargetType="{x:Type Image}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=IsEditable, ElementName=PreviewWindow}" Value="True">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                            <Image Source="{StaticResource BinDrawingImage}" Margin="26, 0, 0, 0">
                                <Image.Style>
                                    <Style TargetType="{x:Type Image}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=IsEditable, ElementName=PreviewWindow}" Value="True">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0, 24, 0, 0">
                            <Image Style="{StaticResource DownloadItemImageStyle}" Margin="0,0,14,0" />
                            <TextBlock Style="{StaticResource Active}" Text="{Binding File.Name}" FontWeight="SemiBold" />
                            <Image Source="{StaticResource EditDrawingImage}" Margin="14, 0, 0, 0">
                                <Image.Style>
                                    <Style TargetType="{x:Type Image}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=IsEditable, ElementName=PreviewWindow}" Value="True">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding File.Description}" TextWrapping="Wrap" Margin="0,20,0,0" Width="525">
                                <TextBlock.Style>
                                    <Style BasedOn="{StaticResource Active}" TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding File.Description}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding File.Description}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <Image Source="{StaticResource EditDrawingImage}" Margin="5, 0, 0, 0">
                                <Image.Style>
                                    <Style TargetType="{x:Type Image}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=IsEditable, ElementName=PreviewWindow}" Value="True">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </StackPanel>
                        <Separator Style="{StaticResource StandardSeparatorStyle}" Width="570" HorizontalAlignment="Left" Margin="0, 20, 0, 0" />
                        <Grid Width="500" HorizontalAlignment="Left" Margin="0, 20, 0, 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{StaticResource Active}" Text="FileType" />
                                <TextBlock Style="{StaticResource Active}" Text="{Binding File.Format}" FontWeight="Medium" Margin="0, 28, 0, 0" />
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Style="{StaticResource Active}" Text="Date added" />
                                <TextBlock Style="{StaticResource Active}" Text="{Binding File.Date, StringFormat=d}" FontWeight="Medium" Margin="0, 28, 0, 0" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Style="{StaticResource Active}" Text="Size" />
                                <TextBlock Style="{StaticResource Active}" Text="{Binding File.Size}" FontWeight="Medium" Margin="0, 28, 0, 0" />
                            </StackPanel>
                            <StackPanel Grid.Column="3">
                                <TextBlock Style="{StaticResource Active}" Text="Category" />
                                <TextBlock Style="{StaticResource Active}" Text="{Binding File.Type}" FontWeight="Medium" Margin="0, 28, 0, 0" />
                            </StackPanel>
                            <StackPanel Grid.Column="4">
                                <TextBlock Style="{StaticResource Active}" Text="Health" />
                                <Image Source="{StaticResource GreenDotDrawingImage}" Width="10" Height="10" HorizontalAlignment="Left" Margin="0, 33, 0, 0" />
                            </StackPanel>
                            <StackPanel Grid.Column="5">
                                <TextBlock Style="{StaticResource Active}" Text="Shared by" />
                                <TextBlock Style="{StaticResource Active}" Text="{Binding File.SharedByCount, StringFormat={}{0} Peers}" FontWeight="Medium" Margin="0, 28, 0, 0" />
                            </StackPanel>
                        </Grid>
                        <Button Width="174" Height="44" Margin="0, 50, 70, 0" Click="Download_OnClick" HorizontalAlignment="Right">
                            <Button.Style>
                                <Style BasedOn="{StaticResource AcceptButton}" TargetType="{x:Type Button}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=DownloadEnabled, ElementName=PreviewWindow}" Value="True">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{StaticResource Download_LightDrawingImage}" Width="20" Height="20" />
                                        <ContentPresenter Content="Download" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15, 0, 0, 0" />
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </views:MvxWindow.ContentTemplate>
</views:MvxWindow>