<views:MvxWpfView x:Class="Peernet.Browser.WPF.Views.ModalView"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf">

    <Border BorderThickness="0" Padding="40" BorderBrush="Transparent" CornerRadius="{StaticResource MainRadius}">
        <Border.Background>
            <SolidColorBrush Color="{StaticResource ModalBackground}" />
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0">
                <TextBlock Text="{Binding Selected.FullPath}" Foreground="{StaticResource DarkGreenBrush}" FontSize="16" />
                <TextBlock Text="{Binding Selected.FileType}" Foreground="{StaticResource DarkGreenBrush}" FontWeight="Bold" FontSize="16" />
            </DockPanel>

            <StackPanel Grid.Row="1">
                <DockPanel TextBlock.Foreground="{StaticResource LightGrayBrush}">
                    <TextBlock Padding="0 5" FontSize="12">Document</TextBlock>
                    <Canvas Height="12" Width="20">
                        <Ellipse Canvas.Left="8" Canvas.Top="4" Height="4" Width="4" Fill="{StaticResource LightGrayBrush}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                    </Canvas>
                    <TextBlock Text="{Binding Selected.FileType}" Padding="0 5" FontSize="12" />
                </DockPanel>
                <TextBlock Style="{StaticResource Title}">Author:</TextBlock>
                <TextBlock Text="{Binding Selected.Author}" Style="{StaticResource Active}" />
                <TextBlock Style="{StaticResource Title}">Size:</TextBlock>
                <TextBlock Text="{Binding Selected.Size}" Style="{StaticResource Active}" />
                <TextBlock Style="{StaticResource Title}">Created:</TextBlock>
                <TextBlock Text="{Binding Selected.CreateDate}" Style="{StaticResource Active}" />
                <TextBlock Style="{StaticResource Title}">Modified:</TextBlock>
                <TextBlock Text="{Binding Selected.ModyfieDate}" Style="{StaticResource Active}" />
            </StackPanel>

            <DockPanel Grid.Row="2" LastChildFill="False" Margin="0 15">
                <Image Margin="7 0" Width="11" Source="/Assets/DirectorySmall.png" />
                <TextBlock Foreground="{StaticResource LightGrayBrush}">Your files</TextBlock>
                <TextBlock Padding="5 0 0 0" Style="{StaticResource Title}">/</TextBlock>
                <Image Margin="7 0" Width="11" Source="/Assets/DirectorySmall.png" />
                <TextBlock Foreground="{StaticResource LightGrayBrush}">Books</TextBlock>
                <Button DockPanel.Dock="Right" Foreground="{StaticResource DarkGreenBrush}" Style="{StaticResource LinkButton}">Change</Button>
            </DockPanel>

            <StackPanel Grid.Row="3">
                <TextBlock Style="{StaticResource Title}">File name</TextBlock>
                <TextBox  Text="{Binding Selected.FileName}" Foreground="{StaticResource DarkGreenBrush}"
                          Template="{StaticResource RoundedTextBox}" Margin="0 5" Height="30" Padding="7" />
                <Border  Grid.Row="1" Grid.Column="1" BorderThickness="0" Padding="9" BorderBrush="Transparent" CornerRadius="{StaticResource MainRadius}">
                    <Border.Background>
                        <SolidColorBrush Color="White" />
                    </Border.Background>
                    <Grid>
                        <TextBlock Text="Add description with #tags to make your file searchable!" Foreground="{StaticResource LightGrayBrush}">
                            <TextBlock.Visibility>
                                <MultiBinding Converter="{StaticResource TextInputToVisibilityConverter}">
                                    <Binding ElementName="txtUserEntry2" Path="Text.IsEmpty" />
                                    <Binding ElementName="txtUserEntry2" Path="IsFocused" />
                                </MultiBinding>
                            </TextBlock.Visibility>
                        </TextBlock>
                        <TextBox Text="{Binding Selected.Desc}" Foreground="{StaticResource DarkGreenBrush}"
                                 Background="Transparent" Name="txtUserEntry2"
                                                 Template="{StaticResource RoundedTextBox}" Height="160"
                                                 AcceptsReturn="True" TextWrapping="Wrap" AcceptsTab="True" />
                    </Grid>
                </Border>
            </StackPanel>

            <Button Command="{Binding AddCommand}" HorizontalAlignment="Left" Style="{StaticResource PrimaryButton}" Foreground="{StaticResource DarkGreenBrush}" FontWeight="Bold" Margin="0 15" Grid.Row="4">+ SHARE ANTOHER FILE</Button>

            <DockPanel Grid.Row="5" LastChildFill="False" HorizontalAlignment="Right">
                <Button Width="90" Style="{StaticResource PrimaryButton}">Hide</Button>
                <Button Width="90" Style="{StaticResource AcceptButton}"  Command="{Binding ConfirmCommand}">Confirm</Button>
            </DockPanel>

            <Grid Visibility="{Binding IsCountVisable, Converter={StaticResource BoolToVisibility}}" Margin="0 10 0 0" Grid.Row="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Command="{Binding LeftCommand}" Foreground="{StaticResource DarkGreenBrush}" HorizontalAlignment="Right" Grid.Column="0" Width="20" Style="{StaticResource PrimaryButton}" Content="&lt;" />
                <TextBox Text="{Binding FilesLength, Mode=OneWay}" IsReadOnly="True" Width="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="{StaticResource DarkGreenBrush}" Template="{StaticResource RoundedTextBox}" Grid.Column="1" />
                <Button Command="{Binding RightCommand}" Foreground="{StaticResource DarkGreenBrush}" HorizontalAlignment="Left" Grid.Column="2" Width="20" Style="{StaticResource PrimaryButton}" Content="&gt;" />
            </Grid>
        </Grid>
    </Border>
</views:MvxWpfView>