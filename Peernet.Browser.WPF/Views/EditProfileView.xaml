<views:MvxWpfView
    x:Class="Peernet.Browser.WPF.Views.EditProfileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf">
    <Border BorderThickness="1" CornerRadius="7,7,7,7">
        <Border.Background>
            <SolidColorBrush Color="#F3F3F3" />
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect ShadowDepth="3" BlurRadius="16" Color="Black" Opacity="0.14" />
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="AUto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Edit your profile" FontWeight="SemiBold" Foreground="#113E48" FontFamily="Inter" FontSize="16" Margin="35,27,0,0" />
            <Button Grid.Column="1" Style="{StaticResource CloseButtonStyle}" Command="{Binding CloseCommand}" Margin="0,31,35,0" HorizontalAlignment="Right" VerticalAlignment="Top" />
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="35,35,27,0">
                <TextBlock Text="Profile photo" Foreground="#113E48" />
                <Image Source="{Binding UserContext.User.Image}" Width="200" Height="200" Margin="0,8,0,0" />
                <Border CornerRadius="4,4,4,4" Background="#113E48" Margin="0,16,0,0">
                    <Button Content="Upload an image" Width="200" Height="43" Background="Transparent" Foreground="White" BorderThickness="0" />
                </Border>
                <Button Content="Remove photo" Foreground="#113E48" Background="Transparent" BorderThickness="0" Margin="0,12,0,0" />
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="1">
                <TextBlock Text="Nickname" Foreground="#113E48" Margin="0,32,0,0" />
                <TextBox Width="346" Height="36" Margin="0,11,35,0" />
            </StackPanel>
            <Separator Grid.Row="2" Grid.ColumnSpan="2" Margin="0,32,0,2" Opacity="0.2" />
            <Grid Grid.Row="3" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Cancel" Command="{Binding CloseCommand}" Foreground="#113E48" Background="Transparent" BorderThickness="0" Width="40" Height="17" Margin="0,0,28,0" HorizontalAlignment="Right" />
                <Border Grid.Column="1" CornerRadius="4,4,4,4" Background="#113E48" Width="181" Height="43" HorizontalAlignment="Right" Margin="0,16,35,15">
                    <Button Content="Save Changes" Background="Transparent" Foreground="White" BorderThickness="0" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </Border>
            </Grid>
        </Grid>
    </Border>
</views:MvxWpfView>