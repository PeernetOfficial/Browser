<views:MvxWpfView
    x:Class="Peernet.Browser.WPF.Views.EditProfileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
    HorizontalAlignment="Center">

    <views:MvxWpfView.Resources>
        <ResourceDictionary>
            <ImageBrush x:Key="DefaultProfileImage" ImageSource="/Assets/DefaultProfileImage.png" />
            <ImageBrush x:Key="SourcedProfileImage" ImageSource="{Binding UserContext.User.Image}" />
        </ResourceDictionary>
    </views:MvxWpfView.Resources>
    <Border BorderThickness="1" CornerRadius="7,7,7,7">
        <Border.Background>
            <SolidColorBrush Color="{StaticResource ModalBackground}" />
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect ShadowDepth="32" BlurRadius="64" Color="Black" Opacity="0.1876" />
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Edit your profile" FontWeight="SemiBold" Foreground="{StaticResource DarkGreenBrush}" FontSize="16" Margin="35,27,0,0" />
            <Button Grid.Column="1" Style="{StaticResource CloseButtonStyle}" Command="{Binding CloseCommand}" Margin="0,11,15,0" HorizontalAlignment="Right" VerticalAlignment="Top" />
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="35,35,27,0">
                <TextBlock Text="Profile photo" Foreground="{StaticResource DarkGreenBrush}" />
                <Border Background="{StaticResource LightGray2Brush}" Width="200" Height="200" Margin="0,8,0,0">
                    <Border>
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Background" Value="{StaticResource SourcedProfileImage}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding UserContext.User.Image}" Value="{x:Null}">
                                        <Setter Property="Background" Value="{StaticResource DefaultProfileImage}" />
                                        <Setter Property="Width" Value="36" />
                                        <Setter Property="Height" Value="36" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </Border>
                <Button Width="200" Height="43" Style="{StaticResource AcceptButton}" Content="Upload an image" Command="{Binding UploadFileCommand}" Margin="0,16,0,0" />
                <Button Content="Remove photo" Command="{Binding RemovePhotoCommand}" Style="{StaticResource PrimaryButton}" Margin="0,12,0,0" />
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="1">
                <TextBlock Text="Nickname" Foreground="{StaticResource DarkGreenBrush}" Margin="0,32,0,0" />
                <TextBox Text="{Binding UserContext.User.Name, TargetNullValue='Set nickname'}" Width="346" Height="36" Margin="0,11,35,0" FontSize="14" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Padding="11.58, 0, 0, 0">
                    <TextBox.Style>
                        <Style TargetType="{x:Type TextBox}">
                            <Setter Property="Foreground" Value="{StaticResource DarkGreenBrush}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding UserContext.User.Image}" Value="{x:Null}">
                                    <Setter Property="Foreground" Value="#C7C7C7" />
                                </DataTrigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="Foreground" Value="{StaticResource DarkGreenBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </StackPanel>
            <Separator Grid.Row="2" Grid.ColumnSpan="2" Margin="0,32,0,2" Opacity="0.2" />
            <Grid Grid.Row="3" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Cancel" Command="{Binding CloseCommand}" Style="{StaticResource PrimaryButton}" Margin="0,29,28,28" HorizontalAlignment="Right" />
                <Button Grid.Column="1" Width="181" Height="43" Style="{StaticResource AcceptButton}" Content="Save Changes" Command="{Binding SaveChangesCommand}" HorizontalAlignment="Right" Margin="0,16,35,15" />
            </Grid>
        </Grid>
    </Border>
</views:MvxWpfView>