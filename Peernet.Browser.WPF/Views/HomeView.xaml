<views:MvxWpfView
             xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
             xmlns:mvx="clr-namespace:MvvmCross.Platforms.Wpf.Binding;assembly=MvvmCross.Platforms.Wpf"
             x:Class="Peernet.Browser.WPF.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Peernet.Browser.WPF.Controls"
             xmlns:local="clr-namespace:Peernet.Browser.WPF.Views"
             xmlns:extensions="clr-namespace:Peernet.Browser.WPF.Extensions"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1441">

    <Grid Background="Transparent">
        <Border BorderThickness="2" Padding="1" BorderBrush="#FC2C2F36" CornerRadius="4,4,4,4"></Border>
        <Grid Margin="0">
            <Grid.Background>
                <ImageBrush ImageSource="/Assets/AppBase.png" />
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <controls:ButtonsControl Grid.Row="0" InitializeOnLoad="true" />
            <controls:NavigationBarControl Grid.Row="1" InitializeOnLoad="true" />

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height = "200" />
                    <RowDefinition Height = "Auto" />
                    <RowDefinition Height = "*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="3" Grid.Column="3">
                    <Image Source="/Assets/Logo.png" Width="278.04" Height="66" Margin="0,0,0,90" />
                    <Border BorderBrush="White" BorderThickness="0" CornerRadius="3,3,3,3">
                        <Border.Background>
                            <SolidColorBrush Color="White" Opacity="0.0605"></SolidColorBrush>
                        </Border.Background>
                        <Grid Width="612" Height="44">
                            <TextBlock Width="80" Padding="15" TextBlock.FontSize="14" Visibility="{Binding ShowHint, Converter={StaticResource BoolToVisibility}}"
                                     TextAlignment="Center"
                                     VerticalAlignment="Center"
                                     FontFamily="Inter"
                                     Background="Transparent"
                                     Foreground="#20ffffff" Text="Search files">
                            </TextBlock>

                            <TextBox Width="575"
                                     Margin="5,0,30,0"
                                     Text="{Binding SearchInput}"
                                     VerticalAlignment="Center"
                                     TextBlock.FontSize="14"
                                     Foreground="White"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     extensions:FocusExtension.IsFocused="{Binding ShowSearchBox}">
                                <TextBox.InputBindings>
                                    <KeyBinding Command="{Binding Search}" Key="Enter" />
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding RemoveHint}" />
                                </TextBox.InputBindings>
                            </TextBox>

                            <Image Margin="570,0,0,0" Source="/Assets/Search.png" Height="14.22" Width="14.22">
                                <Image.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding Search}" />
                                </Image.InputBindings>
                            </Image>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>

            <controls:FooterControl Grid.Row="3" InitializeOnLoad="true" />
        </Grid>
    </Grid>
</views:MvxWpfView>