<views:MvxWpfView
    x:Class="Peernet.Browser.WPF.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
    xmlns:extensions="clr-namespace:Peernet.Browser.WPF.Extensions"
    Margin="0,0,0,358">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height = "200" />
            <RowDefinition Height = "Auto" />
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="3" Grid.Column="3">
            <Image Source="/Assets/Logo.png" Width="278.04" Height="66" Margin="0,0,0,90" />
            <Border BorderBrush="White" BorderThickness="0" CornerRadius="3,3,3,3">
                <Border.Background>
                    <SolidColorBrush Color="White"></SolidColorBrush>
                </Border.Background>
                <Grid Width="612" Height="44">
                    <TextBlock Width="80" Padding="15" TextBlock.FontSize="14" Visibility="{Binding ShowHint, Converter={StaticResource BoolToVisibility}}"
                                     TextAlignment="Center"
                                     VerticalAlignment="Center"
                                     FontFamily="Inter"
                                     Background="Transparent"
                                     Foreground="{StaticResource LightGray2Brush}" Text="Search files">
                    </TextBlock>

                    <TextBox Width="575"
                                     Margin="5,0,30,0"
                                     Text="{Binding SearchInput}"
                                     VerticalAlignment="Center"
                                     TextBlock.FontSize="14"
                                     Foreground="Black"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     extensions:FocusExtension.IsFocused="{Binding ShowSearchBox}">
                        <TextBox.InputBindings>
                            <KeyBinding Command="{Binding Search}" Key="Enter" />
                            <MouseBinding MouseAction="LeftClick" Command="{Binding RemoveHint}" />
                        </TextBox.InputBindings>
                    </TextBox>

                    <Image Margin="570,0,0,0" Source="/Assets/Search.png" Height="14.22" Width="14.22">
                        <Image.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding Search}" />
                        </Image.InputBindings>
                    </Image>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</views:MvxWpfView>