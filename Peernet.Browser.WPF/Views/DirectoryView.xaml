<views:MvxWpfView
    x:Class="Peernet.Browser.WPF.Views.DirectoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
    xmlns:controls="clr-namespace:Peernet.Browser.WPF.Controls"
    xmlns:extensions="clr-namespace:Peernet.Browser.WPF.Extensions"
    xmlns:virtualFileSystem="clr-namespace:Peernet.Browser.Application.VirtualFileSystem;assembly=Peernet.Browser.Application"
    x:Name="DirectoryPage">

    <Border Background="White" BorderThickness="0" CornerRadius="8,8,8,8"  VerticalAlignment="Stretch" Margin="0, 65, 0, 0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="0" Width="233" HorizontalAlignment="Center" Margin="0,28,0,0">
                <StackPanel.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type virtualFileSystem:VirtualFileSystemTier}" ItemsSource="{Binding Path=VirtualFileSystemTiers}">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="14" Height="13" Style="{StaticResource VirtualFileSystemEntityImageStyle}" />
                            <TextBlock x:Name="TreeViewItemText" Text="{Binding Path=Name}" Margin="7, 0, 0, 0">
                                <TextBlock.InputBindings>
                                    <MouseBinding Command="{Binding DataContext.UpdateActiveSearchResults, ElementName=DirectoryPage}" CommandParameter="{Binding}" Gesture="LeftDoubleClick"/>
                                </TextBlock.InputBindings>
                            </TextBlock>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type virtualFileSystem:VirtualFileSystemCategory}">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="14" Height="13" Style="{StaticResource VirtualFileSystemEntityImageStyle}" />
                            <TextBlock Text="{Binding Path=Name}" Margin="7, 0, 0, 0">
                                <TextBlock.InputBindings>
                                    <MouseBinding Command="{Binding DataContext.UpdateActiveSearchResults, ElementName=DirectoryPage}" CommandParameter="{Binding}" Gesture="LeftDoubleClick"/>
                                </TextBlock.InputBindings>
                            </TextBlock>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </StackPanel.Resources>
                <TreeView BorderThickness="0" HorizontalAlignment="Center">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="{x:Type TreeViewItem}">
                            <EventSetter Event="MouseDoubleClick" Handler="TreeViewItem_OnSelected" />
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeViewItem Template="{DynamicResource TreeViewItemTemplate}" ItemsSource="{Binding VirtualFileSystem.VirtualFileSystemTiers}" Header="Your Files" Foreground="{StaticResource DarkGreenBrush}" IsExpanded="True" />
                    <TreeViewItem Template="{DynamicResource TreeViewItemTemplate}" ItemsSource="{Binding VirtualFileSystem.VirtualFileSystemCategories}" Header="Libraries" Foreground="{StaticResource DarkGreenBrush}" IsExpanded="True" />
                </TreeView>
            </StackPanel>
            <Border Grid.Column="1" Width="1" Margin="0,28,0,66" BorderThickness="0">
                <Border.Background>
                    <SolidColorBrush Color="Black" Opacity="0.1" />
                </Border.Background>
            </Border>
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ItemsControl Grid.Row="0" Grid.Column="0" Margin="63, 40, 0, 0" ItemsSource="{Binding PathElements}" >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                <TextBlock x:Name="separator" Text=">" VerticalAlignment="Center">
                                    <TextBlock.Foreground>
                                        <SolidColorBrush Opacity="0.6" Color="Black" />
                                    </TextBlock.Foreground>
                                </TextBlock>
                                <Button x:Name="segment" Height="20" Content="{Binding Path=Name}" Click="PathSegment_OnSelected" Style="{StaticResource TreeViewNavigationPathButtonStyle}" VerticalAlignment="Center" Command="{Binding DataContext.UpdateActiveSearchResults, ElementName=DirectoryPage}" CommandParameter="{Binding}" />
                            </StackPanel>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource PreviousData}}" Value="{x:Null}">
                                    <Setter Property="Visibility" TargetName="separator" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=IsVisualTreeVertex}" Value="True">
                                    <Setter Property="FontWeight" TargetName="segment" Value="SemiBold" />
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Border Grid.Row="0" Grid.Column="1" Width="229" Height="40" HorizontalAlignment="Right" Margin="0,28, 85, 27" BorderThickness="1" CornerRadius="3,3,3,3">
                    <Border.BorderBrush>
                        <SolidColorBrush Opacity="0.06" Color="Black" />
                    </Border.BorderBrush>
                    <Grid>
                        <TextBlock Width="80" Padding="15" FontSize="14" Visibility="{Binding ShowHint, Converter={StaticResource BoolToVisibility}}"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   FontFamily="Inter"
                                   Background="Transparent"
                                   Foreground="#B0B0B0" Text="Search">
                        </TextBlock>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox Margin="20,0,30,0"
                                     Text="{Binding SearchInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     VerticalAlignment="Center"
                                     TextBlock.FontSize="14"
                                     Foreground="Black"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     extensions:FocusExtension.IsFocused="{Binding ShowSearchBox}">
                                <TextBox.InputBindings>
                                    <KeyBinding Command="{Binding Search}" Key="Enter" />
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding RemoveHint}" />
                                </TextBox.InputBindings>
                            </TextBox>

                            <Image Grid.Column="1" Source="{DynamicResource Search_LightDrawingImage}" Height="14.22" Width="14.22" HorizontalAlignment="Right" Margin="0,0,20,0">
                                <Image.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding Search}" />
                                </Image.InputBindings>
                            </Image>
                        </Grid>
                    </Grid>
                </Border>
                <controls:SharedFilesDataGridControl Height="648" Grid.Row="1" Grid.ColumnSpan="2" Margin="37,0,0,0" />
            </Grid>
            <Separator Style="{StaticResource StandardSeparatorStyle}" Grid.Row="1" Grid.ColumnSpan="3"/>
        </Grid>
    </Border>
</views:MvxWpfView>