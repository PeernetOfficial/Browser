<views:MvxWpfView
    x:Class="Peernet.Browser.WPF.Views.DirectoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
    xmlns:virtualFileSystem="clr-namespace:Peernet.Browser.Application.VirtualFileSystem;assembly=Peernet.Browser.Application"
    xmlns:controls="clr-namespace:Peernet.Browser.WPF.Controls"
    x:Name="DirectoryPage">

    <Border Background="{DynamicResource ViewBackgroundBrush}" BorderThickness="0" VerticalAlignment="Stretch" Margin="0, 65, 0, 0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="55" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="0" Width="233" HorizontalAlignment="Center" Margin="0,28,0,0">
                <StackPanel.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type virtualFileSystem:VirtualFileSystemTier}" ItemsSource="{Binding Path=VirtualFileSystemTiers}">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="14" Height="13" Style="{StaticResource VirtualFileSystemEntityImageStyle}" />
                            <TextBlock x:Name="TreeViewItemText" Text="{Binding Path=Name}" Margin="7, 0, 0, 0">
                                <TextBlock.InputBindings>
                                    <MouseBinding Command="{Binding DataContext.UpdateActiveSearchResults, ElementName=DirectoryPage}" CommandParameter="{Binding}" Gesture="LeftDoubleClick" />
                                </TextBlock.InputBindings>
                            </TextBlock>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type virtualFileSystem:VirtualFileSystemCategory}">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="14" Height="13" Style="{StaticResource VirtualFileSystemEntityImageStyle}" />
                            <TextBlock Text="{Binding Path=Name}" Margin="7, 0, 0, 0">
                                <TextBlock.InputBindings>
                                    <MouseBinding Command="{Binding DataContext.UpdateActiveSearchResults, ElementName=DirectoryPage}" CommandParameter="{Binding}" Gesture="LeftDoubleClick" />
                                </TextBlock.InputBindings>
                            </TextBlock>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </StackPanel.Resources>
                <TreeView BorderThickness="0" HorizontalAlignment="Center" Background="Transparent">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="{x:Type TreeViewItem}">
                            <EventSetter Event="MouseDoubleClick" Handler="TreeViewItem_OnSelected" />
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeViewItem Template="{DynamicResource TreeViewItemTemplate}" ItemsSource="{Binding VirtualFileSystem.VirtualFileSystemTiers}" Header="Your Files" Foreground="{DynamicResource MainContentBrush}" IsExpanded="True" FontWeight="Medium" FontSize="16" />
                    <TreeViewItem Template="{DynamicResource TreeViewItemTemplate}" ItemsSource="{Binding VirtualFileSystem.VirtualFileSystemCategories}" Header="Libraries" Foreground="{DynamicResource MainContentBrush}" IsExpanded="True" FontWeight="Medium" FontSize="16" Margin="0, 15, 0, 0" />
                </TreeView>
            </StackPanel>
            <Border Grid.Row="0" Grid.Column="1" Width="1" Margin="0,28,0,66" BorderThickness="0">
                <Border.Background>
                    <SolidColorBrush Color="Black" Opacity="0.1" />
                </Border.Background>
            </Border>
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ItemsControl Grid.Row="0" Grid.Column="0" Margin="63, 40, 0, 0" ItemsSource="{Binding PathElements}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                <TextBlock x:Name="separator" Text=">" VerticalAlignment="Center">
                                    <TextBlock.Foreground>
                                        <SolidColorBrush Opacity="0.89" Color="{DynamicResource MainTextColor}" />
                                    </TextBlock.Foreground>
                                </TextBlock>
                                <Button x:Name="segment" Height="20" Content="{Binding Path=Name}" Click="PathSegment_OnSelected" Style="{StaticResource TreeViewNavigationPathButtonStyle}" VerticalAlignment="Center" Command="{Binding DataContext.UpdateActiveSearchResults, ElementName=DirectoryPage}" CommandParameter="{Binding}" />
                            </StackPanel>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource PreviousData}}" Value="{x:Null}">
                                    <Setter Property="Visibility" TargetName="separator" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=IsVisualTreeVertex}" Value="True">
                                    <Setter Property="FontWeight" TargetName="segment" Value="SemiBold" />
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Border Grid.Row="0" Grid.Column="1" Width="229" Height="40" HorizontalAlignment="Right" Margin="0,28, 85, 27" BorderThickness="1" CornerRadius="3,3,3,3" BorderBrush="{DynamicResource BorderBrush}">
                    <Border.Background>
                        <SolidColorBrush Color="{DynamicResource ViewBackgroundColor}" />
                    </Border.Background>
                    <Grid>
                        <TextBlock FontSize="12"
                                   Padding="12, 0, 0, 0"
                                     TextAlignment="Left"
                                     VerticalAlignment="Center"
                                     FontFamily="Inter"
                                     Background="Transparent"
                                     Foreground="{DynamicResource LightGray2Brush}" Text="Search">
                            <TextBlock.Visibility>
                                <MultiBinding Converter="{StaticResource TextInputToVisibilityConverter}">
                                    <Binding ElementName="txtSearch" Path="Text.IsEmpty" />
                                    <Binding ElementName="txtSearch" Path="IsFocused" />
                                </MultiBinding>
                            </TextBlock.Visibility>
                        </TextBlock>

                        <TextBox Padding="9" Text="{Binding SearchInput, UpdateSourceTrigger=PropertyChanged}"
                                     VerticalAlignment="Center"
                                     TextBlock.FontSize="12"
                                     Foreground="{DynamicResource MainTextBrush}"
                                     Background="Transparent"
                                     BorderThickness="0" Name="txtSearch"
                                     CaretBrush="{DynamicResource MainTextBrush}">
                            <TextBox.InputBindings>
                                <KeyBinding Command="{Binding SearchCommand}" Key="Enter" />
                            </TextBox.InputBindings>
                        </TextBox>

                        <Image Cursor="Hand" Margin="0 0 13 0" HorizontalAlignment="Right" Source="{DynamicResource SearchDrawingImage}" Height="14.22" Width="14.22">
                            <Image.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding SearchCommand}" />
                            </Image.InputBindings>
                        </Image>
                    </Grid>
                </Border>
                <controls:SharedFilesDataGridControl Height="648" Grid.Row="1" Grid.ColumnSpan="2" Margin="37,0,0,0" />
            </Grid>
            <Separator Style="{StaticResource StandardSeparatorStyle}" Grid.Row="1" Grid.ColumnSpan="3" VerticalAlignment="Top" />
        </Grid>
    </Border>
</views:MvxWpfView>