<views:MvxWpfView
      xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
      x:Class="Peernet.Browser.WPF.Views.ExploreView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:Peernet.Browser.WPF.Controls"
      Height="700" Width="1441"
      x:Name="ExplorePage">
    <Border Background="White" BorderThickness="0" CornerRadius="8,8,8,8">
        <Grid Margin="80,40, 10, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Style="{StaticResource Active}" FontWeight="Medium" FontSize="32">Explore</TextBlock>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0, 24, 0, 31">
                <ItemsControl ItemsSource="{Binding CategoryTypes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="1" CornerRadius="4" Margin="0, 0, 48, 0" Cursor="Hand">
                                <Border.BorderBrush>
                                    <SolidColorBrush Color="Black" Opacity="0.08"></SolidColorBrush>
                                </Border.BorderBrush>
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="7" BlurRadius="16" Color="Black" Opacity="0.14" />
                                </Border.Effect>
                                <Border.InputBindings>
                                    <MouseBinding Command="{Binding Path=DataContext.SelectCategoryCommand, ElementName=ExplorePage}" CommandParameter="{Binding}" Gesture="LeftClick" />
                                </Border.InputBindings>
                                <StackPanel>
                                    <Border CornerRadius="4, 4, 0, 0" Height="44" Width="142">
                                    <Border.Style>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="Background" Value="{StaticResource GrayedOutBackgroundBrush}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource DarkGreenBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                        <Image HorizontalAlignment="Left" VerticalAlignment="Bottom" Style="{StaticResource ExploreCategoriesImageStyle}" />
                                    </Border>
                                    <Border CornerRadius="0, 0, 4, 4" Width="142" Height="73" VerticalAlignment="Bottom">
                                        <Border.Background>
                                            <SolidColorBrush Color="White"></SolidColorBrush>
                                        </Border.Background>
                                        <TextBlock Text="{Binding Name}" Style="{StaticResource ActiveSelectable}" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                    </Border>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <Separator Style="{StaticResource StandardSeparatorStyle}" Grid.Row="2" />
            <controls:ExploreFilesDataGridControl Height="390"  Grid.Row="3" VerticalAlignment="Bottom" Margin="0, 20, 0, 0" />
        </Grid>
    </Border>
</views:MvxWpfView>