<views:MvxWpfView
      xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
      x:Class="Peernet.Browser.WPF.Views.ExploreView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:Peernet.Browser.WPF.Controls"
      Height="650" Width="1441">
    <Border Background="White" BorderThickness="0" CornerRadius="8,8,8,8">
        <Grid Margin="80,40, 10, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Style="{StaticResource Active}" FontWeight="SemiBold" FontSize="32">Explore</TextBlock>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0, 24, 0, 0">
                <ItemsControl>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Height="117">
                                <Image Source="{DynamicResource FileDrawingImage}" />
                                <TextBlock Text="Documents" Style="{StaticResource Active}" />
                                <TextBlock Text="Hide Files" Style="{StaticResource Active}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <Separator Style="{StaticResource StandardSeparatorStyle}" Grid.Row="2" />
            <controls:ExploreFilesDataGridControl Grid.Row="3" Height="477" VerticalAlignment="Bottom" Margin="0, 20, 0, 0" />
        </Grid>
    </Border>
</views:MvxWpfView>