<UserControl x:Class="Peernet.Browser.WPF.Controls.SharedDataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:download="clr-namespace:Peernet.SDK.Models.Domain.Download;assembly=Peernet.SDK" xmlns:system="clr-namespace:System;assembly=netstandard"
             Name="SharedDataPanel"
             Background="{DynamicResource ViewBackgroundBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <dxg:GridControl x:Name="SharedFiles" Grid.Column="0" ItemsSource="{Binding Files}" SelectedItemChanged="GridControl_SelectedItemChanged">
            <dxg:GridControl.View>
                <dxg:TableView ShowGroupPanel="False" />
            </dxg:GridControl.View>
            <dxg:GridControl.Columns>
                <dxg:GridColumn Header="NAME" SortFieldName="File.Name" FieldName="File.Name" Width="*" HeaderStyle="{StaticResource ShiftedDataGridColumnHeaderStyle}" HorizontalHeaderContentAlignment="Left">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <Grid Margin="20, 0, 0, 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Image Width="13.71" Height="20" Grid.Column="0" Style="{StaticResource DownloadItemImageStyle}" DataContext="{Binding RowData.Row}" />
                                <TextBlock Grid.Column="1" Text="{Binding RowData.Row.File.Name}" Margin="25,0,5,0" VerticalAlignment="Center" HorizontalAlignment="Left" Cursor="Hand" Style="{StaticResource Underlined}">
                                    <TextBlock.InputBindings>
                                        <MouseBinding Command="{Binding DataContext.StreamFileCommand, ElementName=SharedDataPanel}" CommandParameter="{Binding RowData.Row}" MouseAction="LeftClick" />
                                    </TextBlock.InputBindings>
                                </TextBlock>
                            </Grid>
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>
                <dxg:GridColumn Header="DATE" SortFieldName="File.Date" FieldName="File.Date" Width="100">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding RowData.Row.File.Date, StringFormat=d}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>
                <dxg:GridColumn Header="SIZE" SortFieldName="File.Size" FieldName="File.Size" Width="110">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding RowData.Row.FileSize, Converter={StaticResource BytesToSuffixConverter}}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>
                <dxg:GridColumn Width="Auto">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Style="{StaticResource DataGridActionButton}" Click="OpenFilePreview_OnClick" ToolTip="Details">
                                    <Button.Background>
                                        <ImageBrush ImageSource="{DynamicResource InfoDrawingImage}" />
                                    </Button.Background>
                                </Button>
                                <Button Command="{Binding DataContext.StreamFileCommand, ElementName=SharedDataPanel}" CommandParameter="{Binding RowData.Row}" Height="39" Width="37" IsEnabled="{Binding RowData.Row.IsPlayerEnabled}">
                                    <Button.Background>
                                        <ImageBrush ImageSource="{DynamicResource PlayDrawingImage}" />
                                    </Button.Background>
                                    <Button.Style>
                                        <Style BasedOn="{StaticResource DataGridActionButton}" TargetType="{x:Type Button}">
                                            <Setter Property="ToolTip" Value="Play" />
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button CommandParameter="{Binding RowData.Row}">
                                    <Button.Style>
                                        <Style BasedOn="{StaticResource DataGridActionButton}" TargetType="{x:Type Button}">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <ImageBrush ImageSource="{DynamicResource DownloadDrawingImage}" />
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Width" Value="45" />
                                            <Setter Property="Height" Value="44" />
                                            <Setter Property="Command" Value="{Binding DataContext.DownloadCommand, ElementName=SharedDataPanel}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RowData.Row.Status}" Value="{x:Static download:DownloadStatus.DownloadFinished}">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <ImageBrush ImageSource="{DynamicResource Tick_ActiveDrawingImage}" />
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="IsEnabled" Value="False" />
                                                    <Setter Property="Width" Value="42" />
                                                    <Setter Property="Height" Value="41" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RowData.Row.Status}" Value="{x:Static download:DownloadStatus.DownloadActive}">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <ImageBrush ImageSource="{DynamicResource LoadingDrawingImage}" />
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="IsEnabled" Value="False" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RowData.Row.Status}" Value="{x:Static download:DownloadStatus.DownloadPause}">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <ImageBrush ImageSource="{DynamicResource PlayDrawingImage}" />
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="Width" Value="42" />
                                                    <Setter Property="Height" Value="41" />
                                                    <Setter Property="Command" Value="{Binding DataContext.ResumeCommand, ElementName=SharedDataPanel}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>
            </dxg:GridControl.Columns>
        </dxg:GridControl>
        <ItemsControl x:Name="Comments" Grid.Column="1" Visibility="Collapsed" ItemsSource="{Binding Comments}" Padding="10">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="{DynamicResource LightGray2Brush}" BorderThickness="1" Padding="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Style="{StaticResource Underlined}" FontWeight="Bold" Text="{Binding Username}" Margin="10, 0" />
                            <TextBlock Grid.Column="1" Text="{Binding Content}" Margin="10, 0" VerticalAlignment="Bottom" />
                            <TextBlock Grid.Column="2" Text="{Binding Date}" Margin="10, 0" VerticalAlignment="Bottom" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
