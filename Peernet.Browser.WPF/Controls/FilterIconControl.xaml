<UserControl x:Class="Peernet.Browser.WPF.Controls.FilterIconControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             Cursor="Hand">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource LightGrayBrush}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Foreground" Value="{StaticResource DarkGreenBrush}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <DockPanel LastChildFill="False">
        <svgc:SvgViewbox Margin="0 2 7 2" Source="{Binding ImgSource}" />
        <TextBlock FontSize="14" VerticalAlignment="Center" TextAlignment="Left" Text="{Binding Name}" />
    </DockPanel>
    <UserControl.InputBindings>
        <MouseBinding MouseAction="LeftClick" Command="{Binding SelectCommand}" />
    </UserControl.InputBindings>
</UserControl>