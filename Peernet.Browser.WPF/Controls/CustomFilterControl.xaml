<UserControl x:Class="Peernet.Browser.WPF.Controls.CustomFilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Margin="0 15 0 8" Text="{Binding Title}" />
        <Border Padding="15 10" BorderBrush="{StaticResource LightGrayBrush}" BorderThickness="0.5" CornerRadius="{StaticResource MainRadius}">
            <ScrollViewer MaxHeight="241" VerticalScrollBarVisibility="Auto" Style="{StaticResource FavsScrollViewer}">
                <ItemsControl ItemsSource="{Binding Items}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Foreground="{StaticResource DarkGreenBrush}" Margin="10" Template="{StaticResource RoundedCheckBox}"
                                  VerticalContentAlignment="Center" IsChecked="{Binding IsChecked}">
                                <DockPanel>
                                    <Image Visibility="{Binding ShowDot, Converter={StaticResource BoolToVisibility}}" Width="7" Height="7" Margin="0 0 5 0" Style="{DynamicResource DotStyle}" />
                                    <TextBlock Text="{Binding Content}" />
                                </DockPanel>
                            </CheckBox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </StackPanel>
</UserControl>