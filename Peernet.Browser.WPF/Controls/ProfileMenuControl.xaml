<UserControl
    xmlns:controls="clr-namespace:MvvmCross.Plugin.Control.Platforms.Wpf;assembly=MvvmCross.Plugin.Control.Platforms.Wpf"
    xmlns:domaincontrols="clr-namespace:Peernet.Browser.WPF.Controls" 
    x:Class="Peernet.Browser.WPF.Controls.ProfileMenuControl"
    xmlns:viewmodels="clr-namespace:Peernet.Browser.Application.ViewModels;assembly=Peernet.Browser.Application"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Peernet.Browser.WPF.Controls"
    mc:Ignorable="d" 
    d:DesignHeight="40" 
    d:DesignWidth="1441">

    <Border BorderBrush="White" BorderThickness="1" CornerRadius="3,3,3,3" Width="251">
        <Border.Background>
            <SolidColorBrush Color="White" Opacity="0.0605"></SolidColorBrush>
        </Border.Background>
        <StackPanel>
            <Separator/>
            <ItemsControl 
            ItemsSource="{Binding Items}"
            Background="Transparent"
            Foreground="White">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button BorderThickness="0" Background="Transparent" Content="{Binding Text}" Foreground="White"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Separator/>
        </StackPanel>
    </Border>

</UserControl>
