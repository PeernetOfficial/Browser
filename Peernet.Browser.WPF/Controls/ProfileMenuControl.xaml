<UserControl
    x:Class="Peernet.Browser.WPF.Controls.ProfileMenuControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="40"
    d:DesignWidth="1441">

    <Border BorderBrush="White" BorderThickness="0" CornerRadius="3,3,3,3" Width="212">
        <Border.Background>
            <SolidColorBrush Color="#2C2C2C"></SolidColorBrush>
        </Border.Background>
        <StackPanel>
            <Separator Opacity="0.2" Width="179" />
            <ItemsControl
            ItemsSource="{Binding Items}"
            Background="Transparent"
            Foreground="White">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="{Binding Command}" Content="{Binding Text}" Style="{StaticResource NavbarMenuFontStyle}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Separator Opacity="0.2" Width="179" />
            <Button Style="{StaticResource NavbarMenuFontStyle}" Foreground="#8F8F8F" Content="Delete node" />
        </StackPanel>
    </Border>
</UserControl>