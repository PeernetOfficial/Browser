<controls:MvxWpfControl 
             xmlns:controls="clr-namespace:MvvmCross.Plugin.Control.Platforms.Wpf;assembly=MvvmCross.Plugin.Control.Platforms.Wpf"
             xmlns:domaincontrols="clr-namespace:Peernet.Browser.WPF.Controls" 
             x:Class="Peernet.Browser.WPF.Controls.NavigationBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Peernet.Browser.WPF.Controls"
             xmlns:converters="clr-namespace:Peernet.Browser.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <converters:BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
            </ResourceDictionary>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height = "Auto" />
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Column = "3" Orientation="Horizontal">
            <Button Style="{DynamicResource NavBarButtonStyle}"
                Command="{Binding NavigateHomeCommand}"
                ToolTip="Home" >
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/Home.png" Stretch="Fill"/>
                </Button.Background>
            </Button>
            <Button Style="{DynamicResource NavBarButtonStyle}"
                Command="{Binding NavigateDirectoryCommand}"
                ToolTip="Explore">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/Hash.png" Stretch="Fill"/>
                </Button.Background>
            </Button>
            <Button Style="{DynamicResource NavBarButtonStyle}"
                Command="{Binding NavigateUserCommand}" 
                ToolTip="Directory" >
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/Directory.png" Stretch="Fill"/>
                </Button.Background>
            </Button>
            <Button Style="{DynamicResource NavBarButtonStyle}"
                Command="{Binding OpenProfileMenuCommand}" 
                ToolTip="Profile" >
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/Profile.png" Stretch="Fill"/>
                </Button.Background>
            </Button>
        </StackPanel>
        <domaincontrols:ProfileMenuControl Visibility="{Binding IsProfileMenuVisible, Converter={StaticResource booleanToVisibilityConverter}}"/>
    </Grid>
</controls:MvxWpfControl>
