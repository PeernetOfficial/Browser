<controls:MvxWpfControl
             xmlns:controls="clr-namespace:MvvmCross.Plugin.Control.Platforms.Wpf;assembly=MvvmCross.Plugin.Control.Platforms.Wpf"
             xmlns:domaincontrols="clr-namespace:Peernet.Browser.WPF.Controls" 
             x:Class="Peernet.Browser.WPF.Controls.NavigationBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Peernet.Browser.WPF.Converters">

    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <converters:BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
            </ResourceDictionary>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height = "Auto" />
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Column = "3" Orientation="Vertical">
            <StackPanel  Orientation="Horizontal">
                <Button Style="{DynamicResource NavBarButtonStyle}"
                Command="{Binding NavigateHomeCommand}"
                ToolTip="Home">
                    <Button.Background>
                        <ImageBrush ImageSource="/Assets/Home.png" Stretch="Fill" />
                    </Button.Background>
                </Button>
                <Button Style="{DynamicResource NavBarButtonStyle}"
                Command="{Binding NavigateExploreCommand}"
                ToolTip="Explore">
                    <Button.Background>
                        <ImageBrush ImageSource="/Assets/Explore.png" Stretch="Fill"/>
                    </Button.Background>
                </Button>
                <Button Style="{DynamicResource NavBarButtonStyle}"
                Command="{Binding NavigateDirectoryCommand}" 
                ToolTip="Directory" >
                    <Button.Background>
                        <ImageBrush ImageSource="/Assets/Directory.png" Stretch="Fill"/>
                    </Button.Background>
                </Button>
                <Button Style="{DynamicResource NavBarButtonStyle}"
                Command="{Binding OpenCloseProfileMenuCommand}" 
                ToolTip="Profile" >
                    <Button.Background>
                        <ImageBrush ImageSource="/Assets/User.png" Stretch="Fill"/>
                    </Button.Background>
                </Button>
            </StackPanel>
            <domaincontrols:ProfileMenuControl HorizontalAlignment="Right" Visibility="{Binding IsProfileMenuVisible, Converter={StaticResource booleanToVisibilityConverter}}"/>
        </StackPanel>
    </Grid>
</controls:MvxWpfControl>