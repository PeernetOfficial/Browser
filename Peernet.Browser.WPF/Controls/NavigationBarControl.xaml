<controls:MvxWpfControl 
             xmlns:controls="clr-namespace:MvvmCross.Plugin.Control.Platforms.Wpf;assembly=MvvmCross.Plugin.Control.Platforms.Wpf"
             x:Class="Peernet.Browser.WPF.Controls.NavigationBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Peernet.Browser.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height = "Auto" />
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Column = "3" Orientation="Horizontal">
            <Button Style="{DynamicResource NavBarButtonStyle}"
                Command="{Binding NavigateHomeCommand}"
                ToolTip="Home" >
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/Home.png" Stretch="Fill"/>
                </Button.Background>
            </Button>
            <Button Style="{DynamicResource NavBarButtonStyle}"
                Command="{Binding NavigateDirectoryCommand}"
                ToolTip="Directory">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/Directory.png" Stretch="Fill"/>
                </Button.Background>
            </Button>
            <Button Style="{DynamicResource NavBarButtonStyle}"
                Command="{Binding NavigateUserCommand}" 
                ToolTip="User" >
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/User.png" Stretch="Fill"/>
                </Button.Background>
            </Button>
            <Button Style="{DynamicResource NavBarButtonStyle}"
                Command="{Binding NavigateSettingsCommand}" 
                ToolTip="Settings" >
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/Settings.png" Stretch="Fill"/>
                </Button.Background>
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Focusable="True" Header="About"></MenuItem>
                        <MenuItem Focusable="True" Header="FAQ (Help)"></MenuItem>
                        <MenuItem Focusable="True" Header="Backup to a file"></MenuItem>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
        </StackPanel>
    </Grid>
</controls:MvxWpfControl>
