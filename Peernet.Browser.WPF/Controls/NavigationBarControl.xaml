<UserControl
    x:Class="Peernet.Browser.WPF.Controls.NavigationBarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:domaincontrols="clr-namespace:Peernet.Browser.WPF.Controls"
    xmlns:contexts="clr-namespace:Peernet.Browser.Application.Contexts;assembly=Application">

    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Button Style="{DynamicResource HomeNavBarButtonStyle}" Command="{Binding NavBar.NavigateHomeCommand}" ToolTip="Home" />
            <Button Style="{DynamicResource ExploreNavBarButtonStyle}" Command="{Binding NavBar.NavigateExploreCommand}" ToolTip="Explore" />
            <Button Style="{DynamicResource DirectoryNavBarButtonStyle}" Command="{Binding NavBar.NavigateDirectoryCommand}" ToolTip="Directory" />
            <Button x:Name="AccountPopupToggle" Style="{DynamicResource UserNavBarButtonStyle}" Command="{Binding NavBar.OpenCloseProfileMenuCommand}" ToolTip="User" />
        </StackPanel>
        <domaincontrols:ProfileMenuControl HorizontalAlignment="Right" Visibility="{Binding Path=(contexts:GlobalContext.IsProfileMenuVisible), Converter={StaticResource BoolToVisibility}}" />
    </StackPanel>
</UserControl>