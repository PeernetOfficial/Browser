<UserControl x:Class="Peernet.Browser.WPF.Controls.DailyFeedWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Peernet.Browser.WPF.Controls"
             mc:Ignorable="d"
             x:Name="DailyFeed">
    <local:ListBoxScroll x:Name="WidgetsFeed" Grid.Row="5" ItemsSource="{Binding Results, IsAsync=True, ElementName=DailyFeed}" SelectedItem="{Binding SelectedItem, ElementName=DailyFeed}">
        <local:ListBoxScroll.ItemTemplate>
            <DataTemplate>
                <local:EmbededPluginsControl File="{Binding File}" />
            </DataTemplate>
        </local:ListBoxScroll.ItemTemplate>
    </local:ListBoxScroll>
</UserControl>
