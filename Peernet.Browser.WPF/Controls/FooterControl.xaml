<controls:MvxWpfControl
    x:Class="Peernet.Browser.WPF.Controls.FooterControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mvx="clr-namespace:MvvmCross.Platforms.Wpf.Binding;assembly=MvvmCross.Platforms.Wpf"
    xmlns:controls="clr-namespace:MvvmCross.Plugin.Control.Platforms.Wpf;assembly=MvvmCross.Plugin.Control.Platforms.Wpf">
    <Grid>
        <DockPanel>
            <StatusBar Background="Transparent" VerticalAlignment="Bottom" DockPanel.Dock="Bottom" Margin="83,0,0,34">
                <StatusBarItem>
                    <Image Source="/Assets/Peers.png" Height="20" Width="20" />
                </StatusBarItem>
                <StatusBarItem>
                    <TextBlock mvx:Bi.nd="Text Connected" Foreground="White" ></TextBlock>
                </StatusBarItem>
                <StatusBarItem>
                    <TextBlock mvx:Bi.nd="Text Peers" Foreground="White" ></TextBlock>
                </StatusBarItem>
            </StatusBar>
        </DockPanel>
    </Grid>
</controls:MvxWpfControl>