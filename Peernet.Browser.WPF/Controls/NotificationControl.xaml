<UserControl x:Class="Peernet.Browser.WPF.Controls.NotificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Peernet.Browser.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="notificationControl">
<Border Background="White" Padding="20, 2, 2, 2" CornerRadius="3" HorizontalAlignment="Center" Margin="0, 0, 0, 3">
    <Border.Effect>
        <DropShadowEffect Color="Black" Opacity="0.11" ShadowDepth="1" BlurRadius="21" />
    </Border.Effect>
    <StackPanel Orientation="Horizontal">
        <TextBlock TextWrapping="Wrap" Text="{Binding Path=Notification, ElementName=notificationControl}" Style="{StaticResource Active}" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Button Style="{StaticResource CloseButtonStyle}" Click="RemoveNotification" />
    </StackPanel>
</Border>

</UserControl>
