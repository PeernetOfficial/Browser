<controls:MvxWpfControl
    xmlns:controls="clr-namespace:MvvmCross.Plugin.Control.Platforms.Wpf;assembly=MvvmCross.Plugin.Control.Platforms.Wpf"
    x:Class="Peernet.Browser.WPF.Controls.ButtonsControl"
    xmlns:mvx="clr-namespace:MvvmCross.Platforms.Wpf.Binding;assembly=MvvmCross.Platforms.Wpf"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Peernet.Browser.WPF.Controls"
    mc:Ignorable="d" 
    d:DesignHeight="40" 
    d:DesignWidth="1441">

    <Grid>
        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Style="{StaticResource MinimizeButtonStyle}" mvx:Bi.nd="Command Minimize" />
            <Button Style="{StaticResource MaximizeButtonStyle}" mvx:Bi.nd="Command Maximize"  />
            <Button Style="{StaticResource CloseButtonStyle}"   mvx:Bi.nd="Command CloseApp" />
        </StackPanel>
    </Grid>

</controls:MvxWpfControl>
