<UserControl x:Class="Peernet.Browser.WPF.Controls.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Peernet.Browser.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height = "Auto" />
            <RowDefinition Height = "*" />

        </Grid.RowDefinitions>

        <StackPanel Grid.Column = "3" Orientation="Horizontal">
            <Button HorizontalAlignment = "Center" VerticalAlignment = "Center" Width = "20" Height="20" Command="{Binding NavigateHomeCommand}" Margin="10,10,10,0" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/Home.png" Stretch="Fill"></ImageBrush>
                </Button.Background>
            </Button>
            <Button HorizontalAlignment = "Center" VerticalAlignment = "Center" Width = "20" Height="20" Command="{Binding NavigateDirectoryCommand}" Margin="10,10,10,0" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/Directory.png" Stretch="Fill"></ImageBrush>
                </Button.Background>
            </Button>
            <Button HorizontalAlignment = "Center" VerticalAlignment = "Center" Width = "20" Height="20" Command="{Binding NavigateUserCommand}" Margin="10,10,10,0" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/User.png" Stretch="Fill"></ImageBrush>
                </Button.Background>
            </Button>
            <Button HorizontalAlignment = "Center" VerticalAlignment = "Center" Width = "20" Height="20" Command="{Binding NavigateSettingsCommand}" Margin="10,10,10,0" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/Settings.png" Stretch="Fill"></ImageBrush>
                </Button.Background>
            </Button>
        </StackPanel>

    </Grid>
</UserControl>
