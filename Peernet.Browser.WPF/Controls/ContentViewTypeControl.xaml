<UserControl x:Class="Peernet.Browser.WPF.Controls.ContentViewTypeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:presentationModels="clr-namespace:Peernet.SDK.Models.Presentation;assembly=Peernet.SDK"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="{DynamicResource ToggleSwitchBorderBrush}" BorderThickness="1" CornerRadius="5">
        <StackPanel Orientation="Horizontal">
            <Button HorizontalAlignment="Left" Grid.ColumnSpan="2" Command="{Binding ChangeViewCommand}" CommandParameter="{x:Static presentationModels:ViewType.ListView}" Height="25" Margin="0, 2">
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xEA37;" FontSize="15" Foreground="{DynamicResource MainTextBrush}" />
                <Button.Style>
                    <Style BasedOn="{StaticResource ButtonBaseStyle}" TargetType="{x:Type Button}">
                        <Setter Property="Padding" Value="5 0" />
                        <Setter Property="Width" Value="Auto" />
                        <Setter Property="Background" Value="Transparent" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#60FFFFFF" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button HorizontalAlignment="Left" Command="{Binding ChangeViewCommand}" CommandParameter="{x:Static presentationModels:ViewType.MediaView}" Height="25" Margin="0, 2">
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xEA69;" FontSize="15" Foreground="{DynamicResource MainTextBrush}" />
                <Button.Style>
                    <Style BasedOn="{StaticResource ButtonBaseStyle}" TargetType="{x:Type Button}">
                        <Setter Property="Padding" Value="5 0" />
                        <Setter Property="Width" Value="Auto" />
                        <Setter Property="Background" Value="Transparent" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#60FFFFFF" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Border>
</UserControl>
