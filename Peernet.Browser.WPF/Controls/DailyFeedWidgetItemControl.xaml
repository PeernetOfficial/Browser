<UserControl x:Class="Peernet.Browser.WPF.Controls.DailyFeedWidgetItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Peernet.Browser.WPF.Controls"
             xmlns:commonModels="clr-namespace:Peernet.SDK.Models.Domain.Common;assembly=Peernet.SDK"
             x:Name="DailyFeedItemControl">
        <UserControl.Style>
            <Style TargetType="{x:Type local:DailyFeedWidgetItemControl}">
                <Setter Property="Content">
                    <Setter.Value>
                        <local:GenericEmbededPluginControl File="{Binding File, ElementName=DailyFeedItemControl}" OpenFileCommand="{Binding OpenFileCommand, ElementName=DailyFeedItemControl}" />
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding File.Type}" Value="{x:Static commonModels:LowLevelFileType.Video}">
                        <Setter Property="Content">
                            <Setter.Value>
                                <local:MediaControl File="{Binding File}" />
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding File.Type}" Value="{x:Static commonModels:LowLevelFileType.Audio}">
                        <Setter Property="Content">
                            <Setter.Value>
                                <local:MediaControl File="{Binding File}" />
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding File.Type}" Value="{x:Static commonModels:LowLevelFileType.Picture}">
                        <Setter Property="Content">
                            <Setter.Value>
                                <local:ImageControl File="{Binding File}" />
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
            </Style.Triggers>
            </Style>
        </UserControl.Style>
</UserControl>
