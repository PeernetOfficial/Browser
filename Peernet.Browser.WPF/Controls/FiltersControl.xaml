<UserControl x:Class="Peernet.Browser.WPF.Controls.FiltersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Peernet.Browser.WPF.Controls">
    <Border BorderThickness="0" Padding="40" BorderBrush="Transparent" CornerRadius="{StaticResource MainRadius}">
        <Border.Background>
            <SolidColorBrush Color="{StaticResource ModalBackground}" />
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <TextBlock FontWeight="DemiBold" FontSize="16">Your filters</TextBlock>
                <Button Command="{Binding ClearCommand}" Margin="15 0" VerticalAlignment="Center" Style="{StaticResource LinkButton}">Clear all</Button>
            </DockPanel>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <DockPanel Grid.Column="0" Grid.RowSpan="2" Margin="0 0 15 0">
                    <controls:CustomFilterControl DataContext="{Binding DateFilters}" />
                    <Border Visibility="{Binding ShowCalendar, Converter={StaticResource BoolToVisibility}}" Grid.RowSpan="2"  Grid.Column="1" Margin="0 37 0 12" Padding="15 10" BorderBrush="{StaticResource LightGray3Brush}"
                            BorderThickness="0 1 1 1" CornerRadius="{StaticResource MainRadius}">
                        <controls:CalendarRangeExtension Style="{StaticResource PeernetCalendar}" SelectedDateTo="{Binding DateTo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                         SelectedDate="{Binding DateFrom, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                         IsTodayHighlighted="False" SelectionMode="SingleRange" />
                        <!--http://www.nullskull.com/a/1382/styling-the-wpf-calendar-to-resemble-outlooks-month-view-calendar.aspx-->
                    </Border>
                </DockPanel>
                <controls:CustomFilterControl Grid.Column="1" Grid.RowSpan="2" Margin="0 0 15 0" DataContext="{Binding FileFormatFilters}" />
                <controls:CustomFilterControl Grid.Row="0" Grid.Column="2" DataContext="{Binding HealthFiltes}" />

                <StackPanel Grid.Row="1" Grid.Column="2">
                    <TextBlock Margin="0 15 0 8" Text="SIZE" />
                    <Border BorderBrush="{StaticResource LightGray3Brush}" BorderThickness="1" CornerRadius="{StaticResource MainRadius}">
                        <controls:MyRangeSlider  Maximum="{Binding RangeFilter.Max}" Minimum="{Binding RangeFilter.Min}" RangeMax="{Binding RangeFilter.CurrentMax, Mode=TwoWay}"  RangeMin="{Binding RangeFilter.CurrentMin, Mode=TwoWay}" />
                    </Border>
                </StackPanel>
            </Grid>
            <DockPanel HorizontalAlignment="Right" Grid.Row="2">
                <Button Command="{Binding CancelCommand}" Height="30" Width="110" Style="{StaticResource PrimaryButton}">Cancel</Button>
                <Button Command="{Binding ApplyFiltersCommand}" Height="30" Width="110" Style="{StaticResource AcceptButton}">Apply filters</Button>
            </DockPanel>
        </Grid>
    </Border>
</UserControl>