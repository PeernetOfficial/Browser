<UserControl x:Class="Peernet.Browser.WPF.Controls.FiltersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Peernet.Browser.WPF.Controls">
    <Border BorderThickness="0" Padding="35 35 25 30" BorderBrush="Transparent" CornerRadius="{DynamicResource MainRadius}" Background="{DynamicResource ModalBackgroundBrush}">
        <StackPanel>
            <DockPanel LastChildFill="False">
                <TextBlock  Foreground="{DynamicResource MainContentBrush}"  FontWeight="DemiBold" FontSize="18">Your filters</TextBlock>
                <Button FontSize="14" Command="{Binding ClearCommand}" Margin="15 0" VerticalAlignment="Center" Style="{DynamicResource LinkButton}">Clear all</Button>
            </DockPanel>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="270" />
                </Grid.ColumnDefinitions>

                <DockPanel LastChildFill="True" Grid.Column="0" Grid.Row="0" Margin="0 0 15 0">
                    <Border DockPanel.Dock="Right" Visibility="{Binding ShowCalendar, Converter={StaticResource BoolToVisibility}}" Grid.RowSpan="2"  Grid.Column="1" Margin="0 41 0 12" Padding="15 10" BorderBrush="{DynamicResource LightGray2Brush}"
                            BorderThickness="0 1 1 1" CornerRadius="{DynamicResource MainRadius}">
                        <controls:CalendarRangeExtension Style="{DynamicResource PeernetCalendar}"
                                                         CustomDates="{Binding Dates}"
                                                         IsTodayHighlighted="False" SelectionMode="SingleRange" />
                    </Border>
                    <controls:CustomFilterControl VerticalAlignment="Stretch" DataContext="{Binding DateFilters}" />
                </DockPanel>

                <controls:CustomFilterControl Grid.Column="1" Grid.RowSpan="2" Margin="0 0 15 0" DataContext="{Binding FileFormatFilters}" />

                <StackPanel VerticalAlignment="Bottom" Grid.Row="1" Grid.Column="0" Margin="0 0 10 0">
                    <TextBlock  Foreground="{DynamicResource MainContentBrush}"  FontSize="15" Text="Size" />
                    <DockPanel LastChildFill="False">
                        <StackPanel>
                            <TextBlock Text="From:"  FontSize="10" Margin="0 5" Foreground="{DynamicResource LightGray2Brush}" />
                            <Border Padding="10 0"  Width="120" Height="30" CornerRadius="{DynamicResource MainRadius}" BorderThickness="1" BorderBrush="{DynamicResource LightGray2Brush}">
                                <TextBox Foreground="{DynamicResource MainContentBrush}" VerticalAlignment="Center" Background="Transparent"
                                         BorderThickness="0" Text="{Binding SizeFrom, TargetNullValue='', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="14" MaxLength="10" />
                            </Border>
                        </StackPanel>
                        <TextBlock Padding="20 25 20 0" FontSize="20" Foreground="{DynamicResource LightGrayBrush}" Text="-" />
                        <StackPanel>
                            <TextBlock Text="To:"  FontSize="10" Margin="0 5" Foreground="{DynamicResource LightGray2Brush}" />
                            <Border Padding="10 0"  Width="120" Height="30" CornerRadius="{DynamicResource MainRadius}" BorderThickness="1" BorderBrush="{DynamicResource LightGray2Brush}">
                                <TextBox Foreground="{DynamicResource MainContentBrush}" VerticalAlignment="Center" Background="Transparent"
                                         BorderThickness="0" Text="{Binding SizeTo, TargetNullValue='', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="14" MaxLength="10" />
                            </Border>
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </Grid>

            <DockPanel Margin="0 30 15 0" LastChildFill="False" HorizontalAlignment="Right">
                <Button IsCancel="True" Command="{Binding CancelCommand}" Height="30" Width="110" Style="{DynamicResource PrimaryButton}">Cancel</Button>
                <Button Command="{Binding ApplyFiltersCommand}" Height="45" Width="140" Style="{DynamicResource AcceptButton}">Apply</Button>
            </DockPanel>
        </StackPanel>
    </Border>
</UserControl>