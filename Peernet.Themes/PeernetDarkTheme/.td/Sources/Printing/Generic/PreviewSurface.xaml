<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxpn="http://schemas.devexpress.com/winfx/2008/xaml/printing/native"
                    xmlns:dxpt="http://schemas.devexpress.com/winfx/2008/xaml/printing/themekeys"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:local="clr-namespace:DevExpress.Xpf.Printing.Themes.Generic"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="{dxt:DefaultStyleThemeKey FullName=DevExpress.Xpf.Printing.Native.PreviewSurface}" TargetType="{x:Type dxpn:PreviewSurface}">
        <Setter Property="Template" Value="{DynamicResource ResourceKey={dxpt:PrintingThemeKey ResourceKey=PreviewSurfaceTemplate}}"/>
    </Style>

</ResourceDictionary>