        <Setter Property="dxn:NavBarViewBase.DisplayMode" Value="{Binding DisplayMode, RelativeSource={RelativeSource TemplatedParent}}" />
        
        <Setter Property="ContentTemplateSelector" Value="{Binding ContentTemplateSelector, RelativeSource={RelativeSource TemplatedParent}}" />
        
    </Style>

    <Style x:Key="{dxnt:NavBarItemControlThemeKey ResourceKey=ItemImageStyle}" TargetType="Image">
        <Setter Property="dxcore_unique_xmlns:BlendHelper2.StyleInfo" Value="NavBar\Generic\NavBarItemControl.xaml;21;6" /><Setter Property="FlowDirection" Value="LeftToRight" />
    </Style>

    <Style x:Key="{dxnt:NavBarItemControlThemeKey ResourceKey=ItemTextStyle}" TargetType="ContentControl">
        <Setter Property="dxcore_unique_xmlns:BlendHelper2.StyleInfo" Value="NavBar\Generic\NavBarItemControl.xaml;25;6" /><Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" dxcore_unique_xmlns:BlendHelper2.ThemeInfo="NavBar\Generic\NavBarItemControl.xaml;29;22" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>