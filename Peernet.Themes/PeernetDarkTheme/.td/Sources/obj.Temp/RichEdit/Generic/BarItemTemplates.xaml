        <Grid.RowDefinitions>
          <RowDefinition Height="30" />
          <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <dx:DXBorder Grid.Column="0" Grid.Row="0" Padding="0" dxcore_unique_xmlns:BlendHelper2.ThemeInfo="RichEdit\Generic\BarItemTemplates.xaml;29;18">
          <dx:DXBorder.Resources>
            <dxreui:RichEditStringIdConverter x:Key="stringIdConverter" />
          </dx:DXBorder.Resources>
          <TextBlock FontFamily="{Binding FontFamily}" FontSize="{Binding FontSize}" FontStyle="{Binding FontStyle}" FontWeight="{Binding FontWeight}" Foreground="{Binding Converter={StaticResource galleryStyleItemForeColorConverter}, Path=FontColor}" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Margin="0 2 0 2" Padding="0" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_StyleGalleryItemText, Converter={StaticResource stringIdConverter}, Mode=OneTime}" TextDecorations="{Binding TextDecorations}" TextWrapping="NoWrap" VerticalAlignment="Bottom" dxcore_unique_xmlns:BlendHelper2.ThemeInfo="RichEdit\Generic\BarItemTemplates.xaml;35;22" />
