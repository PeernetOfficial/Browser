      <dxb:BarManager.DXContextMenu>
        <dxb:PopupMenu dxcore_unique_xmlns:BlendHelper2.ThemeInfo="RichEdit\Generic\BarItemTemplates.xaml;63;18">
          <dxb:BarButtonItem Command="{Binding RichEditControl.CommandProvider.NewTableStyle}" Content="{dxre:RichEditLocalizedString MenuCmd_NewTableStyle}" Glyph="{dx:ImageSelector Source={dxre:RichEditImage Image=NewTableStyle_16x16.png}, SvgSource={dxre:RichEditSvgImage Name=NewTableStyle}}" IsPrivate="True" />
