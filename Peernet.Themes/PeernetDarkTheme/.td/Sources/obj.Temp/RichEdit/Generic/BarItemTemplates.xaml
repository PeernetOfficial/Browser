          <dxb:BarButtonItem Command="{Binding Path=DeleteTableStyleCommand}" CommandParameter="{Binding Path=Style}" Content="{dxre:RichEditLocalizedString MenuCmd_DeleteTableStyle}" Glyph="{dx:ImageSelector Source={dxre:RichEditImage Image=ClearTableStyle_16x16.png}, SvgSource={dxre:RichEditSvgImage Name=ClearTableStyle}}" IsPrivate="True" />
        </dxb:PopupMenu>
      </dxb:BarManager.DXContextMenu>
      <Grid Margin="2,2,2,2" dxcore_unique_xmlns:BlendHelper2.ThemeInfo="RichEdit\Generic\BarItemTemplates.xaml;80;14">
        <dx:DXBorder dxcore_unique_xmlns:BlendHelper2.ThemeInfo="RichEdit\Generic\BarItemTemplates.xaml;81;18">
          <dxcore_unique_xmlns:DXImage Source="{Binding BitmapSource}" ToolTip="{Binding StyleName}" />
