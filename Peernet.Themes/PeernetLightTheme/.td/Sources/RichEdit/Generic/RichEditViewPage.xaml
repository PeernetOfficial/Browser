<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxrei="http://schemas.devexpress.com/winfx/2008/xaml/richedit/internal"
                    xmlns:dxret="http://schemas.devexpress.com/winfx/2008/xaml/richedit/themekeys"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--RichEditViewPage-->

    <Style x:Key="{dxt:DefaultStyleThemeKey FullName=DevExpress.Xpf.RichEdit.Controls.Internal.RichEditViewPage}" TargetType="{x:Type dxrei:RichEditViewPage}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="dxrei:RichEditViewPage">
                    <dxrei:RichEditViewPageContentControl x:Name="PageContentRoot"
                                                          Background="{TemplateBinding Background}"
                                                          CommentsVisibility="{TemplateBinding CommentsVisibility}"
                                                          CommentsWidth="{TemplateBinding CommentsWidth}"
                                                          Focusable="False"
                                                          SnapsToDevicePixels="True"
                                                          Template="{DynamicResource {dxret:RichEditControlThemeKey ResourceKey=PrintLayoutViewPageBorderControlTemplate}}"
                                                          UseLayoutRounding="True">
                        <Canvas x:Name="SuperRoot"
                                SnapsToDevicePixels="True"
                                UseLayoutRounding="True">
                            <Grid x:Name="Root"
                                  SnapsToDevicePixels="True"
                                  UseLayoutRounding="True"/>
                        </Canvas>
                    </dxrei:RichEditViewPageContentControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <!--BEGIN WPF-->
        <Setter Property="Focusable" Value="False"/>
        <!--END WPF-->
    </Style>

    <!--RichEditViewCommentsPresenter-->

    <Style x:Key="{dxt:DefaultStyleThemeKey FullName=DevExpress.Xpf.RichEdit.Controls.Internal.RichEditViewCommentsPresenter}" TargetType="{x:Type dxrei:RichEditViewCommentsPresenter}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="dxrei:RichEditViewCommentsPresenter">
                    <ContentControl Background="{TemplateBinding Background}"
                                    Focusable="False"
                                    SnapsToDevicePixels="True"
                                    Template="{DynamicResource {dxret:RichEditControlThemeKey ResourceKey=RichEditViewCommentsPresenterControlTemplate}}"
                                    UseLayoutRounding="True">
                        <Canvas x:Name="SuperRoot"
                                SnapsToDevicePixels="True"
                                UseLayoutRounding="True">
                            <Grid x:Name="Root"
                                  SnapsToDevicePixels="True"
                                  UseLayoutRounding="True"/>
                        </Canvas>
                    </ContentControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <!--BEGIN WPF-->
        <Setter Property="Focusable" Value="False"/>
        <!--END WPF-->
    </Style>

    <!--SimpleViewPage-->

    <Style x:Key="{dxt:DefaultStyleThemeKey FullName=DevExpress.Xpf.RichEdit.Controls.Internal.SimpleViewPage}" TargetType="{x:Type dxrei:SimpleViewPage}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="dxrei:SimpleViewPage">
                    <dxrei:RichEditViewPageContentControl x:Name="PageContentRoot"
                                                          Background="{TemplateBinding Background}"
                                                          CommentsVisibility="{TemplateBinding CommentsVisibility}"
                                                          CommentsWidth="{TemplateBinding CommentsWidth}"
                                                          Focusable="False"
                                                          SnapsToDevicePixels="True"
                                                          Template="{DynamicResource {dxret:RichEditControlThemeKey ResourceKey=SimpleViewPageBorderControlTemplate}}"
                                                          UseLayoutRounding="True">
                        <Canvas x:Name="SuperRoot"
                                SnapsToDevicePixels="True"
                                UseLayoutRounding="True">
                            <Grid x:Name="Root"
                                  SnapsToDevicePixels="True"
                                  UseLayoutRounding="True"/>
                        </Canvas>
                    </dxrei:RichEditViewPageContentControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <!--BEGIN WPF-->
        <Setter Property="Focusable" Value="False"/>
        <!--END WPF-->
    </Style>

    <!--DraftViewPage-->

    <Style x:Key="{dxt:DefaultStyleThemeKey FullName=DevExpress.Xpf.RichEdit.Controls.Internal.DraftViewPage}" TargetType="{x:Type dxrei:DraftViewPage}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="dxrei:DraftViewPage">
                    <dxrei:RichEditViewPageContentControl x:Name="PageContentRoot"
                                                          Background="{TemplateBinding Background}"
                                                          CommentsVisibility="{TemplateBinding CommentsVisibility}"
                                                          CommentsWidth="{TemplateBinding CommentsWidth}"
                                                          Focusable="False"
                                                          SnapsToDevicePixels="True"
                                                          Template="{DynamicResource {dxret:RichEditControlThemeKey ResourceKey=DraftViewPageBorderControlTemplate}}"
                                                          UseLayoutRounding="True">
                        <Canvas x:Name="SuperRoot"
                                SnapsToDevicePixels="True"
                                UseLayoutRounding="True">
                            <Grid x:Name="Root"
                                  SnapsToDevicePixels="True"
                                  UseLayoutRounding="True"/>
                        </Canvas>
                    </dxrei:RichEditViewPageContentControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <!--BEGIN WPF-->
        <Setter Property="Focusable" Value="False"/>
        <!--END WPF-->
    </Style>

    <!--RichEditComment-->

    <Style x:Key="{dxt:DefaultStyleThemeKey FullName=DevExpress.Xpf.RichEdit.Controls.Internal.RichEditComment}" TargetType="{x:Type dxrei:RichEditComment}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="dxrei:RichEditComment">
                    <ContentControl Background="{TemplateBinding Background}"
                                    Focusable="False"
                                    SnapsToDevicePixels="True"
                                    Template="{DynamicResource {dxret:RichEditControlThemeKey ResourceKey=RichEditCommentBorderControlTemplate}}"
                                    UseLayoutRounding="True">
                        <Grid SnapsToDevicePixels="True" UseLayoutRounding="True">
                            <Canvas x:Name="SuperRoot"
                                    SnapsToDevicePixels="True"
                                    UseLayoutRounding="True">
                                <Grid x:Name="Root"
                                      RenderTransform="{TemplateBinding RootRenderTransform}"
                                      SnapsToDevicePixels="True"
                                      UseLayoutRounding="True"/>
                            </Canvas>
                            <Button Command="{TemplateBinding MoreButtonCommand}"
                                    Cursor="Hand"
                                    SnapsToDevicePixels="True"
                                    Style="{DynamicResource {dxret:RichEditControlThemeKey ResourceKey=CommentMoreButtonStyle}}"
                                    UseLayoutRounding="True"
                                    Visibility="{TemplateBinding MoreButtonVisibility}"/>
                        </Grid>
                    </ContentControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <!--BEGIN WPF-->
        <Setter Property="Focusable" Value="False"/>
        <!--END WPF-->
    </Style>

</ResourceDictionary>